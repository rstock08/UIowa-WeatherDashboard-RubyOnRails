%h1 Login

= form_tag login_create_path do

  = label :session, :user_id, 'User-ID'
  = text_field :user, 'user_id', :id => 'loginUser'
  
  = label :session, :password, 'Password'
  = password_field :user, 'password', :id => 'password_word'

  = submit_tag 'Login to my account', :id => 'login_submit'
  
  %br
  = link_to 'Sign up for an account', new_user_path, :id => 'signup'
  %br
  = link_to 'Forgot password?', forgot_password_path, :id => 'forgotPassword'